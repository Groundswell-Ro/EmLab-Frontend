<?xml version="1.0" encoding="utf-8"?>

<messages>

	<message id='profile-settings-widget-template'>
		${profile-settings-dialog}
		${profile-settings-widget class="profile-settings"}
		${profile-other-widget class="profile-settings"}
	</message>

	<message id='profile-settings-template'>
		<div class="profile-settings-heading">
			<div class="settings-title">${settings-title}</div>
		</div>
		<div class="settings-nav">
			${settings-nav-item-submenu-1 class="settings-nav-item active"}
		</div>
		<div class="settings-body">
            <div class="settings-body-title">User Data</div>
			<div class="settings-body-content">
				${change-password-widget}
			</div>
		</div>
	</message>

	<message id='subscription-payment-dialog-template'>
		<div class="pricing-table mx-auto">
			${pricing-plan-free class="pricing-plan"}
			${pricing-plan-monthly class="pricing-plan"}
			${pricing-plan-yearly class="pricing-plan"}
		</div>
	</message>

	<message id='pricing-plan-template'>
		<div class="pricing-plan">
			<img src="https://s28.postimg.cc/ju5bnc3x9/plane.png" alt="" class="pricing-img" />
			<h2 class="pricing-header">${title}</h2>
			<ul class="pricing-features">
			  <li class="pricing-features-item">${option-1}</li>
			  <li class="pricing-features-item">${option-2}</li>
			  <li class="pricing-features-item">${option-3}</li>
			</ul>
			<span class="pricing-price">${price}</span>
			${plan-btn class="pricing-button"}
			<!-- <a href="#/" class="pricing-button">get plan</a> -->
		  </div>
	</message>


	<message id='change-password-template'>
		<h4 class="mb-3">Change Password</h4>
        <form class="form-inline">
			<div class="form-floating mb-1"> ${last-password class="form-control" } <label
				for="${id:last-password}"> Last Password</label>
			</div>
			<div class="form-floating mb-1"> ${new-password class="form-control" } <label
				for="${id:new-password}"> New Password</label>
			</div>
            <div class="form-floating mb-1"> ${new-password-repeat class="form-control" } <label
				for="${id:new-password-repeat}"> Repeat new Password</label>
			</div>
				${submit-btn class="btn btn-success"}
				${change-btn class="btn btn-outline-warning"}
			<span class="help-inline text-danger">${submit-info}</span>
		</form>
	</message>
	
	<message id='settings-nav-item-template'>
		<a class="settings-nav-item-link">${settings-item-title}</a>
	</message>


</messages>