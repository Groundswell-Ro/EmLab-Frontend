<?xml version="1.0" encoding="utf-8"?>
<messages>

    <message id='settings-widget'>
        <div class="basic-widget mt-0 ms-0">
            <div class="text-gray-500 font-semibold text-2xl my-5 capitalize underline">${title}</div>
            ${data-form-widget}
        </div>
    </message>

    <message id='settings-general-data-widget'>
        general data widge5t here
    </message>

    <message id='data-form-widget'>
        <div class="max-w-md">
            <div class="mb-1 font-semibold flex justify-between">
                <div class="capitalize">current ${title}:</div>
                <div class="font-bold mx-3">${current-data}</div>
                ${validation-state}
            </div>
            ${input}
            <div class="flex my-2">
                ${submit-info}
                ${submit-btn class="btn btn-primary ms-auto"}
            </div>
        </div>
    </message>

    <message id='data-change-password-widget'>
        <div class="space-y-5 max-w-md mx-auto sm:mx-0">
            <div>
                <div class="mb-1 font-semibold capitalize">old ${title}</div>
                <div class="relative flex flex-col justify-stretch">
                   ${password-input}
                </div>
            </div>
            <div>
                <div class="mb-1 font-semibold capitalize">new ${title}</div>
                <div class="relative flex flex-col justify-stretch">
                    ${new_password-input}
                </div>
            </div>
            <div>
                <div class="mb-1 font-semibold capitalize">repeat ${title}</div>
                <div class="relative flex flex-col justify-stretch">
                   ${new_password-repeat-input}
                </div>
            </div>
            ${submit-info}
            ${password-requirments}
            ${submit-btn class="btn btn-primary ms-auto"}
        </div>
    </message>

    <message id='email-change-confirmation'>
        <div class="text-center text-xl font-bold mb-3">Change Email</div>
        <div class="space-y-2">
            <div class="text-yellow-500 underline">WORNING !!!</div>
            <div class="">Your email is the way you identify on this app</div>
            <div class="">if you change it you will have to login with the new email address:</div>
            <div class="font-bold">
                <span class="underline text-red-500">${old-email}</span> 
                <span class="text-yellow-400">---></span>

                <span class="underline text-green-500">${new-email}</span>
            </div>
        </div>
        <div class="flex justify-between mt-5">
            ${cancel-btn class="btn btn-seccondary"}
            ${change-btn class="btn btn-primary"}
        </div>
    </message>

</messages>